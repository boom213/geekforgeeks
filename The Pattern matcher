#include <bits/stdc++.h>
using namespace std;
void follPatt(string );
//Position this line where user code will be pasted.
int main() {
	int t;
	cin>>t;
	while(t--)
	{
	    
	    string s;
	    cin>>s;
	    follPatt(s);
	   
	}
	return 0;
}
}
void follPatt(string s)
{
    int x_count=0;
    int y_count=0;
    bool flag=false;
   for(int i=0;i<s.length();i++)
   {
       
       if(s[i]=='x')
       {
           x_count++;
       }
       else
       {
           while(i<s.length()&&s[i]=='y')
           {
               y_count++;
               i++;
           }
           //cout<<i<<endl;
           i--;
           //cout<<i<<endl;
           if(x_count==y_count)
           {
               x_count=y_count=0;
           }
           else
           {
               flag=true;
               break;
           }
       }
   }
  if(flag==false&&x_count==y_count)
  cout<<1;
  else
  cout<<0;
   cout<<endl;
}

